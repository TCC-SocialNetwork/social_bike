<div class="container login">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
    <h2 class="form-signin-heading">Entrar</h2>
    <label for="inputEmail" class="sr-only">E-mail</label>
    <%= f.text_field :login, autofocus: true, placeholder: "E-mail ou Login", class: "form-control", required: true %>

    <label for="inputPassword" class="sr-only">Senha</label>
    <%= f.password_field :password, placeholder: "Senha", class: "form-control", required: true %>
    
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %> Lembrar-me
      </label>
      <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "btn btn-default" %><br />
    </div>


    <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
  <% end %>

</div>
