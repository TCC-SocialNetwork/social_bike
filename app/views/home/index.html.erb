<% unless @users.nil? or @users.empty? %>
<h1>Usuários</h1>
<table>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Amigo', add_friend_path(user), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% unless @events.nil? or @events.empty? %>
<h1>Eventos</h1>
<table>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= link_to "Ver", event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

