<div class="container">
<h1>Novo Evento</h1>
<%= form_tag(action: :create) do %>
  <div class="field">
    <%= label_tag :title, "Título" %>
    <%= text_field_tag :title, nil, class: "form-control", placeholder: "Título" %>
  </div>

  <div class="field">
    <%= label_tag :description, "Descrição" %>
    <%= text_field_tag :description, nil, class: "form-control", placeholder: "Descrição" %>
  </div>

  <div class="field">
    <%= label_tag :start, "Início" %>
    <%= datetime_field_tag :start, nil, class: "form-control", placeholder: "Início" %>
  </div>

  <div class="field">
    <%= label_tag :duration, "Duração" %>
    <%= number_field_tag :duration, nil, class: "form-control", placeholder: "Duração" %>
  </div>

  <div class="field">
    <%= label_tag :particular, "Particular" %>
    <%= check_box_tag :particular, nil, class: "form-control", placeholder: "Particular" %>
  </div>

  <br />
  <div class="actions">
    <%= button_tag class: "btn btn-success" do %>
      <span class="glyphicon glyphicon-save" aria-hidden="true"></span> Salvar
    <% end %>
  </div>
<% end %>
</div>